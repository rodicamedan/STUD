@page  "/{id:int?}"
@model Studenti.Pages.Stud.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].CNP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].NrTelefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].DataInscriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Facultate.NumeFacultate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].SpecializareStudenti)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudD.Studenti)
        {
            string selectedRow = "";
            if (item.ID == Model.StudID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrTelefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInscriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facultate.NumeFacultate)
            </td>
            <td>
                @{
                    foreach (var category in item.SpecializareStudenti)
                    {
                                <br />
                        //@category.Specializare.ID <br />
                       // @: @category.Specializare.Denumire
                    }
                }
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
